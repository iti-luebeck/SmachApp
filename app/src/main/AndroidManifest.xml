<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_luebeck.iti.smachapp.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.uni_luebeck.iti.smachapp.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.uni_luebeck.iti.smachapp.app.StateMachineEditor"
            android:label="@string/title_activity_state_machine_editor" >
        </activity>
        <activity
            android:name="de.uni_luebeck.iti.smachapp.app.StateProperty"
            android:label="@string/title_activity_state_property"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>
