<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_luebeck.iti.smachapp.app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StateMachineEditor"
            android:label="@string/title_activity_state_machine_editor" />
        <activity
            android:name=".StateProperty"
            android:label="@string/title_activity_state_property"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".TransitionProperty"
            android:label="@string/title_activity_transition_property"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MachineProperty"
            android:label="@string/title_activity_machine_property" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings" />
        <activity
            android:name=".DebugActivity"
            android:label="@string/title_activity_debug_activity" />
    </application>

</manifest>
